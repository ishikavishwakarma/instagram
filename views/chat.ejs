<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-zinc-900 text-white ">
    <div class="head h-[5vh] w-full px-4 py-8 flex items-center gap-[36vh] py-4 ">
        <div class="text-white flex items-center gap-2 mt-5">
            <div class="image overflow-hidden w-[11vw] h-[11vw] rounded-full bg-sky-100">
                <img class = "w-[100%] h-[100%] object-cover" src="/images/uploads/<%=user.image%>" alt="">
            </div>
            <div class="text">
                <h3><%=user.username%></h3> 
            </div>
        </div>    
  <a href="/feed"><i class="ri-close-line text-white text-[3vh]  "></i></a>
    </div>
    <hr class="mt-3">
    <% allusers.reverse().forEach(function(user){ %>

    <a href="/chat/<%=  user.username %>" class="outline-none">
        <div class="text-white flex items-center gap-2 px-4 mt-5">
            <div class="image overflow-hidden w-[11vw] h-[11vw] rounded-full bg-sky-100">
                <img class = "w-[100%] h-[100%] object-cover" src="/images/uploads/<%=user.image%>" alt="">
            </div>
            <div class="text">
                <h3><%=user.username%></h3>
                <h4 class="text-xs opacity-30 leading-none"><%=user.name%></h4>
            </div>
        </div>     
        <% }) %>
    </a>
</div>

<% include ./partials/footer.ejs %>